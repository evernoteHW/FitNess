///查看体重曲线

- (void)requestWeigthListData
{
    [self showHud];
    NSMutableDictionary *parametersDic = [NSMutableDictionary dictionary];
    [parametersDic setObject:[[FNDataKeeper sharedInstance] getUserId] forKey:URL_DATA_K_USER_ID];
    [parametersDic setObject:@"2014-10-04" forKey:URL_DATA_K_BEGINDATE];
    [parametersDic setObject:@"2014-10-08" forKey:URL_DATA_K_ENDDATE];
    
    __unsafe_unretained DataGraphController *weakSelf = self;
    [[NetworkManager shareManager] requestParams:parametersDic withModule:MODELS_MODEL_USERINFOMANGER method:MODELS_METHOD_QRYWEIGHTLIST finishBlock:^(DataServies *request, id result) {
        
        NSString *msg = [result objectForKey:@"msg"];
        if ([[result objectForKey:@"flag"] integerValue] == 1) {
            NSLog(@"%@",result[@"retDataArray"]);
        }else{
            [[TKAlertCenter defaultCenter] postAlertWithMessage:@"请求超时,请检查你的网络环境"];
            NSLog(@"%@",msg);
        }
        [weakSelf hideHud];
        
    } failBlock:^(DataServies *request, NSError *error) {
        [[TKAlertCenter defaultCenter] postAlertWithMessage:@"请求超时,请检查你的网络环境"];
        [weakSelf hideHud];
    }];

}

